<Window x:Class="LieDetector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LieDetector"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="BoutonVideo" Content="Video..." HorizontalAlignment="Left" Margin="53,18,0,0" VerticalAlignment="Top" Width="75" Click="ButtonVideo_Click"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="186,10,0,0" VerticalAlignment="Top" Width="100"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="10,10,0,0" VerticalAlignment="Top" Width="37" RenderTransformOrigin="0.117,-1.808" Source="Images/video-clip-icone.png"/>
        <Button x:Name="BoutonImages" Content="Images..." HorizontalAlignment="Left" Margin="53,67,0,0" VerticalAlignment="Top" Width="75" Click="ButtonImage_Click" IsEnabled="False"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="10,59,0,0" VerticalAlignment="Top" Width="37" RenderTransformOrigin="0.117,-1.808" Source="Images/files-icon.png"/>

    </Grid>
</Window>
